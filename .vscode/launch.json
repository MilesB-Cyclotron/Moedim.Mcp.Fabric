    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET: Debug MCP Server (Stdio)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/Moedim.Mcp.Fabric/bin/Debug/net10.0/Moedim.Mcp.Fabric.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Moedim.Mcp.Fabric",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "envFile": "${workspaceFolder}/src/Moedim.Mcp.Fabric/.env"
        },
        {
            "name": ".NET: Debug MCP Server (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/Moedim.Mcp.Fabric/bin/Debug/net10.0/Moedim.Mcp.Fabric.dll",
            "args": ["--http", "--port", "5000"],
            "cwd": "${workspaceFolder}/src/Moedim.Mcp.Fabric",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "envFile": "${workspaceFolder}/src/Moedim.Mcp.Fabric/.env"
        }
    ]
}